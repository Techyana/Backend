  "info": {
    "title": "Parts Management API",
    "description": "Endpoints to manage parts, claims, and users",
    "version": "1.0",
    "contact": {}
  },
  "tags": [],
  "servers": [],
  "components": {
    "securitySchemes": {
      "access-token": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http"
      }
    },
    "schemas": {
      "UpdatePasswordDto": {
        "type": "object",
        "properties": {
          "passwordCurrent": {
            "type": "string",
            "example": "OldPassword123!"
          },
          "password": {
            "type": "string",
            "example": "NewPassword456!",
            "minLength": 8,
            "maxLength": 32,
            "description": "Must include uppercase, lowercase, number, and special character"
          },
          "passwordConfirm": {
            "type": "string",
            "example": "NewPassword456!"
          }
        },
        "required": [
          "password",
          "passwordConfirm"
        ]
      },
      "LoginDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "example": "SuperSecret123!",
            "minLength": 8,
            "maxLength": 32
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "CreatePartDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "partNumber": {
            "type": "string"
          },
          "forDeviceModels": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "status": {
            "type": "string",
            "enum": [
              "available",
              "used",
              "requested",
              "pending_collection",
              "collected"
            ]
          }
        },
        "required": [
          "name",
          "partNumber",
          "forDeviceModels"
        ]
      },
      "PartResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "partNumber": {
            "type": "string"
          },
          "forDeviceModels": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "quantity": {
            "type": "number"
          },
          "status": {
            "type": "string",
            "enum": [
              "available",
              "used",
              "requested",
              "pending_collection",
              "collected"
            ]
          },
          "claimedByName": {
            "type": "object"
          },
          "claimedAt": {
            "type": "string",
            "format": "date-time"
          },
          "requestedByName": {
            "type": "object"
          },
          "requestedAtTimestamp": {
            "type": "string",
            "format": "date-time"
          },
          "createdAtTimestamp": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAtTimestamp": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "id",
          "name",
          "partNumber",
          "forDeviceModels",
          "quantity",
          "status",
          "createdAtTimestamp",
          "updatedAtTimestamp"
        ]
      },
      "ErrorResponseDto": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "number",
            "example": 400,
            "description": "HTTP status code of the error"
          },
          "error": {
            "type": "string",
            "example": "Bad Request",
            "description": "Short description of the error type"
          },
          "message": {
            "example": [
              "username must be a string",
              "password should not be empty"
            ],
            "description": "Detailed error message(s); either a string or an array of strings",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "timestamp": {
            "type": "string",
            "example": "2025-09-08T09:30:00.000Z",
            "description": "Timestamp of when the error occurred"
          },
          "path": {
